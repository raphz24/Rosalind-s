def mendel_prob(k,m,n):
    N = k+m+n

    p_Aa_Aa = (m/N) * ((m-1)/(N-1)) if N>1 and m>1 else 0
    p_Aa_aa = (m/N) * (n/(N-1)) if N>1 else 0
    p_aa_Aa = (n/N) * (m/(N-1)) if N>1 else 0
    p_aa_aa = (n/N) * ((n-1)/(N-1)) if N>1 and n>1 else 0

    p_rec = p_Aa_Aa * 0.25 + (p_Aa_aa + p_aa_Aa) * 0.5 + p_aa_aa * 1.0
    return 1.0 - p_rec

print(mendel_prob(18,25,15))
